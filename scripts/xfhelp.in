if [ "x$BROWSER" = "x" ]
then
  BROWSER=netscape
fi

if [ -d $XFCE_DATA/help/ ]
then 
  HELP_DIR=$XFCE_DATA/help
else 
  HELP_DIR=XFCE_DIR/help
fi

if [ -r $HELP_DIR/help.$LANG.html ]
then 
  HELP_FILE=$HELP_DIR/help.$LANG.html
else 
  HELP_FILE=$HELP_DIR/help.html
fi

if [ "x`basename $BROWSER`" = "xnetscape" ]
then
  $BROWSER -remote openurl\(file:///$HELP_FILE\) || $BROWSER $HELP_FILE
else
  $BROWSER $HELP_FILE
fi

exit 0
